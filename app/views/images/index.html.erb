
<p id="notice"><%= notice %></p>

<h1>Images</h1>
<p> I only accept Nijika pictures here! >:( </p>
<div class="container">
  <table class="table table-striped table-hover text-center">
    <thead>
      <tr>
        <th>Title</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr class = "text-center">
          <td><%= image.title %></td>
          <td><%= link_to 'Show', image%></td>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
          <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }%></td>
        </tr>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New Image', new_image_path, class:"btn btn-warning" %>

